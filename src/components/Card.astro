---
import { Image } from "astro:assets";
import Typography from "../components/Typography.astro";
interface Props {
	title: string;
	img: {
		src: string;
		alt: string;
		width: number | `${number}`;
		height: number | `${number}`;
	};
}

const { title, img } = Astro.props;
---

<figure
	class="border border-slate-300/30 rounded-3xl bg-white px-4 py-12 flex flex-col gap-4 items-center text-center shadow-[0px_27px_90px_9px_rgba(0,0,0,0.05)]"
>
	<Image src={img.src} alt={img.alt} width={img.width} height={img.height} />
	<Typography component="h3" class="heading-h3">{title}</Typography>
	<figcaption>
		<slot />
	</figcaption>
</figure>
